<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttom_error_toast_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/show_error_toast"
        app:layout_constraintEnd_toEndOf="@+id/buttom_warning_toast_main_activity"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/buttom_warning_toast_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/buttom_warning_toast_main_activity" />

    <Button
        android:id="@+id/buttom_success_toast_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/show_success_toast"
        app:layout_constraintEnd_toEndOf="@+id/buttom_general_toast_main_activity"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/buttom_general_toast_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/buttom_general_toast_main_activity" />

    <Button
        android:id="@+id/buttom_general_toast_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/show_general_toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttom_warning_toast_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/show_warning_toast"
        app:layout_constraintEnd_toEndOf="@+id/buttom_success_toast_main_activity"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/buttom_success_toast_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/buttom_success_toast_main_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>