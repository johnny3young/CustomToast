<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_toast_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center"
    android:background="@drawable/toast_general_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_icon_toast"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_general_toast"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/text_message_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="@string/general_toast"
        android:textColor="@color/colorToastText"
        />

</LinearLayout>